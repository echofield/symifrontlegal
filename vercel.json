{
  "version": 2,
  "buildCommand": "echo 'Static deployment - no build needed'",
  "outputDirectory": ".",
  "installCommand": "echo 'No dependencies needed for static HTML'",
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data:; font-src 'self';"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        }
      ]
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "NEXT_PUBLIC_API_URL": "https://symilegalback.vercel.app",
    "NEXT_PUBLIC_GOOGLE_MAPS_API_KEY": "YOUR_KEY_HERE"
  }
}
