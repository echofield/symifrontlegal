{
  "version": 2,
  "builds": [
    {
      "src": "symione/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "symione/build" }
    }
  ],
  "installCommand": "cd symione && npm ci",
  "buildCommand": "cd symione && npm run build",
  "rewrites": [
    { "source": "/api/:path*", "destination": "https://api.symione.com/api/:path*" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}


